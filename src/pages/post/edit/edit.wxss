.putactivity {
  margin: 40rpx 30rpx; }

.section {
  margin-top: 20rpx;
  padding: 0rpx 25rpx;
  background-color: #FFFFFF; }
  .section .line {
    height: 52rpx;
    padding: 16rpx 0px;
    font-size: 30rpx;
    border-bottom: 1rpx solid #DADADA; }
    .section .line:last-child {
      border-bottom: 0rpx solid #DADADA; }
    .section .line .title {
      margin-right: 30rpx; }
    .section .line .detailed {
      position: relative; }
      .section .line .detailed .text {
        color: #999999; }
      .section .line .detailed .selected {
        color: #333333; }
      .section .line .detailed .picker {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        opacity: 0; }
    .section .line .icon-more {
      width: 30rpx !important;
      height: 30rpx !important;
      margin-right: 12rpx !important; }
    .section .line .textMap {
      font-size: 26rpx;
      margin: 5rpx 90rpx;
      color: #999999; }
  .section .lineChecked {
    padding: 15rpx 0px;
    border-top: 1rpx solid #DADADA; }
    .section .lineChecked .title {
      margin-right: 30rpx; }
    .section .lineChecked .detailed {
      position: relative; }
      .section .lineChecked .detailed .text {
        color: #999999; }
    .section .lineChecked .minutes {
      margin-right: 25rpx; }
    .section .lineChecked .text {
      font-size: 24rpx;
      color: #999999;
      margin-top: 10rpx;
      margin-bottom: 10rpx; }
  .section .description {
    position: relative;
    margin: 30rpx 0rpx; }
    .section .description .text-box {
      margin-top: 20rpx; }
      .section .description .text-box .textArea {
        width: 100%;
        height: 130px; }
      .section .description .text-box .wordwrap {
        position: absolute;
        bottom: 10rpx;
        right: 0;
        color: #999999; }
  .section .activity_remind {
    position: relative;
    padding: 24rpx 0rpx;
    background-color: #FFFFFF; }
    .section .activity_remind .text {
      font-size: 32rpx;
      padding-right: 15rpx; }
    .section .activity_remind .icon {
      width: 45rpx;
      height: 45rpx; }
    .section .activity_remind .switch {
      position: absolute;
      right: 10rpx; }
