/* components/navbar/index.wxss */
.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  color: #000;
  z-index: 9999999;
}
.status-bar{
  width: 100%;
}
.title-bar{
  position: relative;

}


/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  color: #2c2b2b;
  font-weight: 600;
}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  justify-content: space-between;
  /* height: 100%; */
}

.nav-capsule-box{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 170rpx;
  height: 60rpx;
  border-radius: 50rpx;
  border: 1rpx solid #e8e8e8;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
}

.nav-icon{
  display: flex;
  -webkit-flex: 1;
  flex: 1;
  -webkit-justify-content: center;
  justify-content: center;
}

.navbar-v-line {
  width: 1px;
  height: 36rpx;
  background-color: #e5e5e5;
}

.back-pre, .back-home {
  width: 36rpx;
  height: 36rpx;
  /* padding: 10rpx; */
}
.nav-capsule .back-home {
  width: 40rpx;
  height: 40rpx;
}